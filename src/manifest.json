{
  "manifest_version": 2,
  "name": "LinkedOn",
  "version": "1.0",

  "description": "Reads Linkedin tabs to fill a DB.",
  "permissions": [
    "tabs",
    "activeTab",
	"contextMenus",
	"storage",
	"notifications"
  ],

  "page_action": {
	"default_icon": "static/img/icon256.png",
	"browser_style": true
  },

  "background": {
    "scripts": [
	  "static/js/background.js",
      "static/js/config.js",
	  "static/js/parser.js"
	]
  },

  "content_scripts": [
	{
	  "matches": ["https://www.linkedin.com/*"],
	  "js": [
		"static/js/jquery.js",
		"static/js/config.js",
		"static/js/parser.js"
	  ]
	}
  ],

  "browser_action": {
    "default_title": "LinkedOn",
    "default_popup": "html/popup.html",
	"default_icon": {
		"256": "static/img/icon256.png"
	}
  },

  "pages": [
    {
	  "url": "html/home.html"
	}
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "ext@linkedon"
    }
  }
}
